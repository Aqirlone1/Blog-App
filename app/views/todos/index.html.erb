<h1>All Todos</h1>

<h3> <%=link_to 'Create New Todo' ,  new_todo_path(@todo)%> </h3>
<table style = "border: 1px solid white"> 
<thead>
 <tr>
    <th> <strong> Title  </th>
    <th>  <strong> Description  </th>
    <th>  <strong> Feedback  </th>
    <th colspan = "3"> Actions </th>
 </tr>
</thead>
<tbody>
<% @todos.each do |t| %>
  <tr> 
    <td> <%= t.title %>  </td>
    <td> <%= t.description %> </td>
    <td> <%= t.feedback %> </td>
    <td> <%=link_to 'Show', todo_path(t)%> </td>
    <td> <%=link_to 'Edit' ,  edit_todo_path(t)%> </td>
    <td> <%= button_to 'Delete', t, method: :delete, data: {confirm: "Are you sure"} %> </td>
  </tr>
  <%end%>
<tbody>

</table>
