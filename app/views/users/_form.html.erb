<%= render 'shared/errors' , obj: @user %>

<%= form_with(model: user) do |form| %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username , placeholder: "Enter username" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email , placeholder: "Enter Email address" %>
  </div>
  <div>
  <%= form.label :password, style: "display: block" %>
  <%= form.password_field :password , placeholder: "Choose Password" %>
</div>
<br>
  <div>
    <%= form.submit(@user.new_record? ?  "Signup" : "Update Account") %>
  </div>
<% end %>
